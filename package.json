{
    "name": "@madkarma/ts-utils",
    "version": "1.1.2",
    "devDependencies": {
        "@clack/prompts": "^1.0.0",
        "@types/bun": "latest",
        "prettier": "3.8.1"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
    },
    "exports": {
        "./array": {
            "default": "./dist/array.js",
            "types": "./dist/array.d.ts"
        },
        "./boolean": {
            "default": "./dist/boolean.js",
            "types": "./dist/boolean.d.ts"
        },
        "./number": {
            "default": "./dist/number.js",
            "types": "./dist/number.d.ts"
        },
        "./types": {
            "default": "./dist/types.js",
            "types": "./dist/types.d.ts"
        },
        "./package.json": "./package.json"
    },
    "description": "A collection of TypeScript utilities I find myself using often",
    "scripts": {
        "biome": "biome check --write",
        "ci": "biome ci",
        "build": "tsc",
        "dev": "tsc --watch",
        "format": "prettier --write --ignore-unknown .",
        "tags": "git push origin --tags && git push",
        "patch": "bun pm version patch && bun run tags",
        "minor": "bun pm version minor && bun run tags",
        "major": "bun pm version major && bun run tags",
        "postinstall": "bun run scripts/setup.ts"
    },
    "type": "module",
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/madkarmaa/ts-utils.git"
    },
    "license": "MIT"
}
